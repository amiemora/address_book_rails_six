<p id="notice"><%= notice %></p>
<h4>Person Table</h4>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
        <tr>
          <th>Person ID</th>
          <th>Salutation</th>
          <th>First</th>
          <th>Middle</th>
          <th>Last</th>
          <th>SSN</th>
          <th>DOB</th>
          <th>Comment</th>
        </tr>
      </thead>
      <tbody id="personTable">
      <% @people.each do |person| %>
        <%= render 'person_row', person: person %>
      <% end %>
      </tbody>
  </table>
</div>

<br>
<%= link_to 'Back', root_path,  class: 'btn btn-info' %>
<%= link_to 'New Person', new_person_path, class: 'btn btn-info', data: { bs_toggle: 'modal', bs_target: '#newPersonModal', remote: true } %>





<div class="modal fade" id="newPersonModal" tabindex="-1" aria-labelledby="newPersonModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newPersonModalLabel">Create Person</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="newPersonForm">
      </div>
    </div>
  </div>
</div>



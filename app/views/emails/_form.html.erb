<%= form_with(model: email, class: 'editform') do |form| %>
  <% if email.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(email.errors.count, "error") %> prohibited this email from being saved:</h2>

      <ul>
        <% email.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-2">
     <label class="form-label">Person ID</label>
<%= form.text_field :person_id, class: 'form-control' %>
  </div>
  <div class="col-md-6">
    <label class="form-label">Email</label>
<%= form.text_field :email_address, class: 'form-control' %>
  </div>
  <div class="col-md-4">
    <label class="form-label">Comment</label>
      <%= form.text_field :comment, class: 'form-control' %>
  </div>
  <div class="col-12">
    <%= form.submit class: 'btn btn-info update' %>
<%= link_to 'Back', emails_path, class: 'btn btn-info showback' %>
  </div>
<% end %>

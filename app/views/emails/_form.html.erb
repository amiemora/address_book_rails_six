<%= form_with(model: email, class: 'editform', local: false) do |form| %>
  <div class="modal-body">
    <% if email.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(email.errors.count, "error") %> prohibited this email from being saved:</h2>

      <ul>
        <% email.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-2">
     <label class="form-label">Person ID</label>
<%= form.text_field :person_id, class: 'form-control' %>
  </div>
  <div class="col-md-6">
    <label class="form-label">Email</label>
<%= form.text_field :email_address, class: 'form-control' %>
  </div>
  <div class="col-md-4">
    <label class="form-label">Comment</label>
      <%= form.text_field :comment, class: 'form-control' %>
  </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary close-modal" data-bs-dismiss="modal">Close</button>
  <%= form.submit class: 'btn btn-info update' %>
</div>
<% end %>

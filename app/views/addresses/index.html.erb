<p id="notice"><%= notice %></p>
<h4>Address Table</h4>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
        <tr>
          <th>Person ID</th>
          <th>Street</th>
          <th>First</th>
          <th>Town</th>
          <th>Zip</th>
          <th>State</th>
          <th>Country</th>
        </tr>
      </thead>
      <tbody id="addressTable">
     <% @addresses.each do |address| %>
        <%= render 'address_row', address: address %>
     <% end %>
      </tbody>
  </table>
</div>

<br>
<%= link_to 'Back', root_path,  class: 'btn btn-info' %>
<%= link_to 'New Address', new_address_path,  class: 'btn btn-info', data: { bs_toggle: 'modal', bs_target: '#newAddressModal', remote: true } %>

<div class="modal fade" id="newAddressModal" tabindex="-1" aria-labelledby="newAddressModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newAddressModalLabel">Create Person</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="newAddressForm">
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="editAddressModal" tabindex="-1" aria-labelledby="editAddressModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editAddressModalLabel">Edit Person</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="editAddressForm">
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="showAddressModal" tabindex="-1" aria-labelledby="showAddressModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="showAddressModalLabel">Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="showAddressDetail">
      </div>
    </div>
  </div>
</div>
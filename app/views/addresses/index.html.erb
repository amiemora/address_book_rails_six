<p id="notice"><%= notice %></p>
<h4>Address Table</h4>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
        <tr>
          <th>Person ID</th>
          <th>Street</th>
          <th>First</th>
          <th>Town</th>
          <th>Zip</th>
          <th>State</th>
          <th>Country</th>
        </tr>
      </thead>
      <tbody>
     <% @addresses.each do |address| %>
        <tr>
          <td><%= address.person_id %></td>
        <td><%= address.street %></td>
        <td><%= address.town %></td>
        <td><%= address.zip %></td>
        <td><%= address.state %></td>
        <td><%= address.country %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
  </table>
</div>

<br>
<%= link_to 'Back', root_path,  class: 'btn btn-info' %>
<%= link_to 'New Address', new_address_path,  class: 'btn btn-info' %>
